<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- Batch Action Toolbar (initially hidden) -->
        <include
            android:id="@+id/batchActionToolbar"
            layout="@layout/toolbar_batch_actions"
            android:visibility="gone" />

        <!-- Header Section with Search -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardElevation="0dp"
            app:cardCornerRadius="0dp"
            android:backgroundTint="@color/surface">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="6dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="My Pantry"
                    android:textSize="20sp"
                    android:textColor="@color/text_primary"
                    android:fontFamily="sans-serif-medium"
                    android:paddingBottom="2dp" />

                <!-- Search bar with Material Design 3 styling -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="0dp"
                    app:strokeWidth="1dp"
                    app:strokeColor="@color/gray_300"
                    android:backgroundTint="@color/surface">

                    <androidx.appcompat.widget.SearchView
                        android:id="@+id/searchViewPantry"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:minHeight="36dp"
                        android:paddingTop="2dp"
                        android:paddingBottom="2dp"
                        android:queryHint="Search ingredients..."
                        android:iconifiedByDefault="false"
                        app:queryBackground="@android:color/transparent"
                        android:theme="@style/Widget.App.SearchView" />
                </com.google.android.material.card.MaterialCardView>

                <!-- Sorting controls with improved styling -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="4dp"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Sort by:"
                        android:textSize="14sp"
                        android:textColor="@color/text_secondary"
                        android:fontFamily="sans-serif-medium"
                        android:layout_gravity="center_vertical" />

                    <Spinner
                        android:id="@+id/spinnerSort"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:entries="@array/sort_options"
                        android:minHeight="36dp"
                        android:layout_marginStart="8dp" />
                </LinearLayout>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- RecyclerView for pantry items -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerViewPantry"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:clipToPadding="false"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:paddingTop="8dp"
            android:paddingBottom="96dp"
            android:scrollbars="vertical" />
    </LinearLayout>

    <!-- Modern FAB with enhanced styling -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabAddIngredient"
        style="@style/Widget.App.FloatingActionButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:contentDescription="@string/add_ingredient"
        app:srcCompat="@drawable/ic_add" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>
