<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="8dp">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical">

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_shopping_cart"
            android:tint="@color/warning"
            android:layout_marginEnd="12dp" />

        <TextView
            android:id="@+id/textIngredientName"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Ingredient name"
            android:textSize="14sp"
            android:textColor="@color/text_primary" />

        <TextView
            android:id="@+id/textIngredientQuantity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1 cup"
            android:textSize="12sp"
            android:textColor="@color/text_secondary"
            android:fontFamily="sans-serif-medium"
            android:layout_marginEnd="8dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnSubstitute"
            style="@style/Widget.Material3.Button.TextButton"
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:text="Substitute"
            android:textSize="10sp"
            android:minWidth="0dp"
            android:paddingHorizontal="8dp"
            app:iconSize="12dp" />
    </LinearLayout>

    <!-- Substitution suggestions (initially hidden) -->
    <LinearLayout
        android:id="@+id/layoutSubstitutions"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:paddingStart="32dp"
        android:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Suggested substitutions:"
            android:textSize="12sp"
            android:textColor="@color/text_secondary"
            android:layout_marginBottom="4dp" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerSubstitutions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:nestedScrollingEnabled="false" />
    </LinearLayout>
</LinearLayout>