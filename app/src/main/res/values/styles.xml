<resources>
    <!-- Card View Style -->
    <style name="Widget.App.CardView" parent="Widget.Material3.CardView.Elevated">
        <item name="cardCornerRadius">16dp</item>
        <item name="cardElevation">2dp</item>
        <item name="cardBackgroundColor">@color/surface</item>
        <item name="contentPadding">16dp</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="rippleColor">@color/overlay_light</item>
    </style>

    <!-- Floating Action Button Style -->
    <style name="Widget.App.FloatingActionButton" parent="Widget.Material3.FloatingActionButton.Primary">
        <item name="tint">@color/white</item>
        <item name="backgroundTint">@color/secondary</item>
        <item name="elevation">6dp</item>
        <item name="pressedTranslationZ">12dp</item>
    </style>

    <!-- Bottom Navigation Style -->
    <style name="Widget.App.BottomNavigationView" parent="Widget.Material3.BottomNavigationView">
        <item name="itemIconTint">@color/bottom_nav_color</item>
        <item name="itemTextColor">@color/bottom_nav_color</item>
        <item name="itemRippleColor">@color/overlay_light</item>
        <item name="elevation">8dp</item>
        <item name="backgroundTint">@color/surface</item>
        <item name="labelVisibilityMode">labeled</item>
    </style>

    <!-- Toolbar Style -->
    <style name="Widget.App.Toolbar" parent="Widget.Material3.Toolbar">
        <item name="titleTextColor">@color/white</item>
        <item name="android:background">@color/primary</item>
        <item name="elevation">4dp</item>
    </style>

    <style name="ToolbarStyle" parent="Widget.App.Toolbar" />

    <!-- Text Appearances -->
    <style name="TextAppearance.App.Headline" parent="TextAppearance.Material3.HeadlineMedium">
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textSize">24sp</item>
        <item name="android:fontFamily">@font/poppins_medium</item>
    </style>

    <style name="TextAppearance.App.Title" parent="TextAppearance.Material3.TitleLarge">
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">@font/poppins_medium</item>
    </style>

    <style name="TextAppearance.App.Body" parent="TextAppearance.Material3.BodyMedium">
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textSize">14sp</item>
        <item name="lineHeight">21sp</item>
        <item name="android:fontFamily">@font/inter_regular</item>
    </style>

    <style name="TextAppearance.App.Caption" parent="TextAppearance.Material3.BodySmall">
        <item name="android:textColor">@color/text_secondary</item>
        <item name="android:textSize">12sp</item>
        <item name="android:fontFamily">@font/inter_regular</item>
    </style>

    <!-- Button Styles -->
    <style name="Widget.App.Button" parent="Widget.Material3.Button">
        <item name="cornerRadius">12dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:letterSpacing">0</item>
    </style>

    <style name="Widget.App.Button.Outlined" parent="Widget.Material3.Button.OutlinedButton">
        <item name="cornerRadius">12dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <!-- Chip Style -->
    <style name="Widget.App.Chip" parent="Widget.Material3.Chip.Suggestion">
        <item name="chipCornerRadius">16dp</item>
        <item name="chipBackgroundColor">@color/primary_container</item>
        <item name="android:textColor">@color/primary</item>
    </style>

    <!-- Search View Style -->
    <style name="Widget.App.SearchView" parent="Widget.AppCompat.SearchView">
        <item name="queryBackground">@android:color/transparent</item>
        <item name="searchHintIcon">@null</item>
        <item name="android:textColorHint">@color/text_hint</item>
    </style>
</resources>
